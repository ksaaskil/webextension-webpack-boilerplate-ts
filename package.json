{
  "name": "webextension-webpack-boilerplate-ts",
  "version": "0.0.1",
  "description": "Webextension boilerplate with webpack and TypeScript",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production webpack --config ./webpack/prod.config.js --display-error-details",
    "start": "NODE_ENV=development DEBUG=extension* webpack-dev-server --config ./webpack/dev.config.js --display-error-details",
    "lint": "tslint --project .",
    "lint-fix": "tslint --project . --fix",
    "format-check": "prettier -c src/**/*.{ts,html,css}",
    "format": "prettier --write src/**/*.{ts,html,css}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o .storybook-static",
    "test-storybook": "start-storybook -p 6006 --smoke-test",
    "test": "jest --coverage",
    "type-check": "tsc"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "debug": "^4.1.1",
    "react": "^16.8.6",
    "react-bootstrap": "^1.0.0-beta.8",
    "react-dom": "^16.8.6",
    "webextension-polyfill-ts": "^0.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "@types/chrome": "^0.0.82",
    "@types/debug": "^4.1.4",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.4",
    "babel-jest": "^24.7.1",
    "babel-loader": "8.0.5",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "2.1.0",
    "file-loader": "3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.2.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "jest-webextension-mock": "^3.5.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.17.0",
    "react-hot-loader": "^4.6.3",
    "react-test-renderer": "^16.8.6",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react-hooks": "^2.0.0",
    "typescript": "^3.4.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1",
    "write-file-webpack-plugin": "4.5.0"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "junit.xml"
  }
}
